{% extends 'base.html.twig' %}

{% block title %}Associations{% endblock %}

{% block body %}

    <div class="progress center-block">
        <div class="progress-bar bg-success" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
            <span>{{ Page1 }}</span>
        </div>
    </div>
    <fieldset>

            <legend>Liste des associations : </legend>

            <table id="" class="display" style="width:100%">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Voir les informations</th>
                    <th>Ajouter/modifier des informations</th>
                    <th>Voir les salariés</th>
                    <th>Supprimer une association</th>
                </tr>
                </thead>
                <tbody>
                {% for association in associations %}
                <tr>
                    <td>{{ association.anom }}</td>
                    <td>{{ association.amail}}</td>
                    <td>
                        <a href="{{ path('voirAssociation',{'assomail': association.amail, 'Page1':Page1}) }}" method="post">Voir</a>
                    </td>
                    <td>
                        <a href="{{ path('modifAssociation',{'assoMail': association.amail, 'Page1':Page1}) }}" method="post">Modifier</a>
                    </td>
                    <td>
                        <a href="{{ path('affSalaries',{'assomail': association.amail, 'Page1':Page1}) }}" method="post">Salariés</a>
                    </td>
                    <td>
                        <a href="" method="post">Supprimer</a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            <br>

    </fieldset>
{% endblock %}

{% block javascripts %}

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/keytable/2.5.0/js/dataTables.keyTable.min.js"></script>
    <script>
        $(document).ready(function() {
            $('table.display').DataTable();
        } );
    </script>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/keytable/2.5.0/css/keyTable.dataTables.min.css">
{% endblock %}