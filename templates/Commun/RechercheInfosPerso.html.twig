{% extends 'base.html.twig' %}
{% block body %}
    {% if role=='ADMIN_ASSO' %}
    <div class="progress center-block">
        <div class="progress-bar bg-success" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
            <span>{{ Page1 }}</span>
        </div>
        <div class="progress-bar bg-warning" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="20" aria-valuemax="100">
            <span>{{ Page3 }}</span>
        </div>
    </div>
    {% endif %}
    {% if role=='SUPER_ADMIN' %}
        <div class="progress center-block">
            <div class="progress-bar bg-success" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                <span>{{ Page1 }}</span>
            </div>
            <div class="progress-bar bg-warning" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="20" aria-valuemax="100">
                <span>{{ Page2 }}</span>
            </div>
            <div class="progress-bar bg-danger" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="20" aria-valuemax="100">
                <span>{{ Page3 }}</span>
            </div>
        </div>
    {% endif %}

    <h1>Liste des Salariés existant déjà</h1>
    <br>
    {{ form_start(form) }}
    {#    {{ form_widget(form) }}#}
    <div class="form-row align-items-end">
        <div class="col">
            Numéro de sécu :
            {{ form_widget(form.snumsecu) }}
            <button type="submit" class="btn btn-success">Rechercher</button>
        </div>
    </div>
    {{ form_end(form) }}

    {%  if ListeInfoAVerif %}
        <table id="" class="display" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Numéro de sécurité sociale</th>
                <th>Séléctionner</th>
            </tr>
            </thead>
            <tbody>

            {% for Info in ListeInfoAVerif %}
                <tr>
                    <td>{{ Info.snom }}</td>
                    <td>{{ Info.sprenom }}</td>
                    <td>{{ Info.sdatenaissance|date("d/m/Y")}}</td>
                    <td>{{ Info.snumsecu }}</td>
                    <td>
                        <a href="{{ path('AjoutInfosPro',{'mailasso': mailasso, 'idinfoperso': Info.spersoid, 'role' : role, 'Page1' : Page1}) }}" method="post">Selectionner</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        {#    <h6>Numéro de sécu :
                {{ form_widget(form.snumsecu) }}
            </h6>
            <h6>Adresse :
                {{ form_widget(form.aadresse) }}
            </h6>
            <h6>Téléphone :
                {{ form_widget(form.atel) }}
            </h6>
            <h6>Date de création :
                {{ form_widget(form.adatecreation) }}
            </h6>
            <h6>Date d'embauche du premier salarié' :
                {{ form_widget(form.adateembauche) }}
            </h6>#}
    {% endif%}
    <br>
    <br>
    <td>
        <a href="{{ path('AjoutInfosPerso',{'mailasso': mailasso, 'role' : role, 'Page1': Page1}) }}" method="post" type="button" class="btn btn-danger">Ajouter un nouveau Salarié</a>
    </td>
{% endblock %}
