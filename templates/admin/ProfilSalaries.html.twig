{% extends 'base.html.twig' %}
{% block body %}
  <fieldset>
    <legend style="color:#18BC9C"><B>Voici les informations sur votre salarié :</B></legend>

    <br>
    <hr>
    <table>
      <tr>
        <td>
          <H4 style="color:#18BC9C"> Informations Personnelles </H4>
          <br>
          <li><B>Nom :</B>  {{ infosperso.snom }}</li>
          <li><B>Nom de Jeune Fille :</B>  {{ infosperso.snomjeunefille }}</li>
          <li><B>Prenom :</B>  {{ infosperso.sprenom }}</li>
          <li><B>Adresse :</B>  {{ infosperso.sadresse }} </li>
          <li><B>Portable :</B>  {{ infosperso.sportable }} </li>
          <li><B>Telephone :</B>  {{ infosperso.stel }} </li>
          <li><B>Date de naissance :</B>  {{ infosperso.sdatenaissance|date("d/m/Y") }} </li>
          <li><B>Lieu de naissance :</B>  {{ infosperso.slieunaissance }} </li>
          <li><B>Département de naissance :</B>  {{ infosperso.sdptnaissance }} </li>
          <li><B>Nationalité Française :</B>
            {% if infosperso.snationalite==0 %}
              Oui
            {% else %}
              Non
            {% endif %}
          </li>
          {% if infosperso.snationalite==1 %}
            <li> <B>Autre Nationalité (Numéro de carte de séjour):</B>  {{ infosperso.sautre }} </li>
          {% endif %}
          <li><B>N° de sécurité sociale :</B>  {{ infosperso.snumsecu }} </li>
          <li><B>Situation familliale :</B>  {{ infosperso.ssituationfam }} </li>
          <li><B>Nombre d'enfants a charge :</B> {{ infosperso.snbenfant }} </li>
        </td>
        <td>
          <H4 style="color:#18BC9C"> Informations Professionnelles </H4>
          <br>
          <ul>
            <li><B>Mail de l'association :</B>  {{ infospro.smailasso }}</li>
            <li><B>Nom employeur :</B>  {{ infospro.snomemployeur }}</li>
            <li><B>Poste occupé :</B>  {{ infospro.sposteoccupe }}</li>
            <li><B>Groupe CCNS:</B>  {{ infospro.sccns }}</li>
            <li><B>Nature du contrat :</B>  {{ infospro.snaturecontrat }}</li>
            <li><B>Type temps de travail (Partiel, Temps pleins ou intermitant):</B>  {{ infospro.stypetempstravail }}</li>
            <li><B>Gestion des congés payés:</B>
              {% if infospro.sgestcp==0 %}
                Oui
              {% else %}
                Non
              {% endif %}
            </li>
            <li><B>Date de début :</B>  {{ infospro.sdatedebut|date("d/m/Y") }}</li>
            <li><B>Date de fin :</B>
              {% if infospro.sdatefin==null  %}

              {% else %}
                {{ infospro.sdatefin|date("d/m/Y") }}
              {% endif %}
            </li>
            <li><B>Motif de fin:</B>  {{ infospro.sfinmotif }}</li>
            <li><B>Commentaire de fin:</B>  {{ infospro.scomfin }}</li>
            <li><B>10% de congés payés versé manuellement:</B>
              {% if infospro.s10congemois==0 %}
                Oui
              {% else %}
                Non
              {% endif %}
            </li>
            <li><B>Congés à prendre:</B>
              {% if infospro.sconge==0 %}
                Oui
              {% else %}
                Non
              {% endif %}
            </li>
            <li><B>Type de contrat (si aide/subventionné) :</B>  {{ infospro.stypecontrat }}</li>
            <li><B>Salarié multi-employeur :</B>
              {% if infospro.smultiemployeur==0 %}
                Oui
              {% else %}
                Non
              {% endif %}
            </li>
            <li><B>Volume horaire mensuel :</B>  {{ infospro.svolhorairemois }}</li>
            <li><B>Taux horaire brut (en €) :</B>  {{ infospro.stauxhorairebrut }}</li>
            <li><B>Salaire mensuel brut (en €) par mois :</B>  {{ infospro.ssalmoisbrut }}</li>
            <li><B>Adhésion complémentaire santé obligatoire proposé par l'employeur :</B>
              {% if infospro.scomplemsante==0 %}
                Oui
              {% else %}
                Non
              {% endif %}
            </li>
            <li><B> Autres éléments de rémunération :</B>  {{ infospro.sautreelement }}</li>
          </ul>
        </td>
      </tr>
    </table>
    <hr>
    <br>

    {#Début de la Nav-bar, Les noms des ongles#}
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#conges" role="tab" aria-controls="home" aria-selected="true">Congés</a>
      </li>
