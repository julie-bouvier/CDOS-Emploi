{% extends 'base.html.twig' %}

{% block body %}
    <h1>Création d'un compte</h1>

    {{ form_start(form) }}
{#    {{ form_widget(form) }}#}

    {{ form_row(form.email, {'label' : 'Email de l\'utilisateur','attr':{'placeholder':'Adresse email...'}}) }}
    {{ form_row(form.password, {'label' : 'Mot de passe','attr':{'placeholder':'Mot de passe ...'}}) }}
    {{ form_row(form.confirmPassword, {'label' : 'Confirmation du mot de passe','attr':{'placeholder':'Répétez le mot de passe'}}) }}
